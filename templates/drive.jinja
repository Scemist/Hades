{% extends 'base.jinja' %}

{% block content %}
<section class="bg-gray-800 rounded text-zinc-300 shadow-lg p-6 m-6 w-8/12 mx-auto">
	<div class="flex justify-between mb-6">
		<h2 class="text-2xl font-semibold">Connected As</h2>

		{% if key_setted %}
		<div class="flex items-center gap-2">
			<p class="text-gray-400 font-semibold">Already Have a Key Setted</p>

			<a href="/key/clear" class="bg-blue-900 rounded shadow py-1 px-5 border border-blue-950 flex items-center"><i data-lucide="pin-off" class="h-4"></i> Clear</a>
		</div>
		{% endif %}
	</div>

	<form class="flex items-end gap-2" action="/key" method="POST">
		<fieldset class="flex-1 mb-6 flex flex-col">
			<label class="mb-2 text-sm text-gray-300">Using Passphrase</label>
			<input type="password" class="py-1 px-3 shadow border border-gray-900 rounded bg-gray-900 font-bold" name="key" autocomplete="off">
		</fieldset>

		<fieldset class="mb-6 flex justify-end">
			<button type="submit" class="bg-blue-900 rounded shadow py-1 px-5 border border-blue-950 flex items-center"><i data-lucide="pin" class="h-4"></i> {{ 'Update' if key_setted else 'Apply' }}</button>
		</fieldset>
	</form>
</section>
{% endblock %}